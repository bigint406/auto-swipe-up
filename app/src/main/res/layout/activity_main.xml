<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_start_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动滑屏" />

        <Button
            android:id="@+id/btn_stop_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="停止滑屏" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="startY 百分比" />

        <TextView
            android:id="@+id/tv_start_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="86%" />

        <SeekBar
            android:id="@+id/sb_start_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="95" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="endY 百分比" />

        <TextView
            android:id="@+id/tv_end_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18%" />

        <SeekBar
            android:id="@+id/sb_end_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="95" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="duration 毫秒" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180ms" />

        <SeekBar
            android:id="@+id/sb_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="800" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="期望滑屏间隔 秒" />

        <TextView
            android:id="@+id/tv_interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120s" />

        <SeekBar
            android:id="@+id/sb_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="600" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="实际间隔会在期望值基础上随机浮动正负10秒，最短1秒。建议范围：startY 85到92，endY 10到22，duration 120到220"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>
